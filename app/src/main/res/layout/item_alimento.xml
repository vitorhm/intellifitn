        android:id="@+id/sp_bottom_alimento"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/sp_header_alimento" />

    <View
        android:id="@+id/vw_divider_list"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/colorText"
        android:alpha="0.12"
