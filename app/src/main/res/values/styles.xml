<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent400</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent200</item>
        <item name="colorControlHighlight">@color/colorAccent200</item>
    </style>

    <style name="Theme.MyThemeBottom" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme.Spinner" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/colorAccent400</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
